#!/bin/bash

set -e -x

cd gopath/

export GOPATH=$PWD
export PATH=$GOPATH/bin:$PATH

cd src/github.com/cloudfoundry-incubator/vizzini/

go get -t -d -v ./...

go install github.com/onsi/ginkgo/ginkgo

ginkgo \
  -nodes=8 \
  -skip="{LOCAL}" \
  -randomizeAllSpecs \
  -progress \
  -trace \
  "$@" \
  -- \
  --receptor-address=${RECEPTOR_ADDRESS} \
  --routable-domain-suffix=${ROUTABLE_DOMAIN_SUFFIX}
